        <VBox spacing="30" style="-fx-padding: 40; -fx-background-color: #ffffff;">
            <Label text="SETTINGS" style="-fx-font-size: 40px; -fx-font-weight: bold;"/>

            <!-- Settings -->
            <VBox spacing="40">
